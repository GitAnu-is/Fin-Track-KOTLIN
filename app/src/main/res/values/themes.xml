<resources>

    <!-- Main Theme -->
    <style name="Theme.FinTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/holo_orange_light</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.FinTrack.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Optional Rounded ImageView Style -->
    <style name="RoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <!-- AppCompat theme for OnBoard activity -->
    <style name="Theme.FinTrack.AppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/holo_orange_light</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
